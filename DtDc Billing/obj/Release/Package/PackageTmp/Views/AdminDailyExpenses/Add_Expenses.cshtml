@model DtDc_Billing.Models.ExpenseModel

@{
    ViewBag.Title = "Add_Expenses";
    Layout = "~/Views/Shared/AdminCashCounterLayout.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Add Expenses</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <div class="form-horizontal" style="margin-top:10px" >
                            <div class="box-body">
                                <div class="form-group">
                                    <div class="row" >
                                        <div class="col-md-3">
                                            <label for="inputEmail3" class="">Amount<span class="Reqired">*</span></label>
                                            <div class="">
                                                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Enter Amount" } })
                                                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="inputEmail3" class="">Reason<span class="Reqired">*</span></label>
                                            <div class="">
                                                @Html.TextAreaFor(model => model.Rason, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Enter Address", rows = "5" } })
                                                @Html.ValidationMessageFor(model => model.Rason, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="inputPassword3" class="">Category</label>
                                            <div class="">
                                                @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Category" } })
                                                @*@Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })*@
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <div class="box-footer">
                                                <input type="submit" class="btn btn-primary pull-right btn-sm" value="Add" />
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                                
                            </div>
                            <!-- /.box-body -->
                            
                            <!-- /.box-footer -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


<style>
    .input-validation-error {
        border: 1px solid #ff0000 !important;
    }
    textarea {
        width: 100%;
    }
    .Reqired {
        color: red;
    }
</style>


@if (ViewBag.Success != null)
{
    <script>

        $(document).ready(function () {

            alert('Expenses Added SuccessFully');

        });

    </script>

}


