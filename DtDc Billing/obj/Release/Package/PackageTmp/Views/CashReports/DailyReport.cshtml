@model IEnumerable<DtDc_Billing.Entity_FR.Receipt_details>
@{
    ViewBag.Title = "DailyReport";
    Layout = "~/Views/Shared/CashCounterLayout.cshtml";
}



<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />

<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>


<div class="content-wrapper" id="dailyrptwrpr">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-info">
                            <div class="box-header with-border">
                                <h3 class="box-title">Daily Report</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                @using (Html.BeginForm())
                                {

                                    <div class="col-md-6 no-padding">
                                        <div class="form-group">
                                            <label class="col-md-2 no-padding">Date:</label>
                                            <div class="col-md-8">
                                                <div class="input-group date">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </div>
                                                    @if (ViewBag.date != null)
                                                    {
                                                        <input class="form-control pull-right" id="datepicker" value="@ViewBag.date" name="searcheddate" type="text">
                                                    }
                                                    else
                                                    {
                                                        <input class="form-control pull-right" id="datepicker" name="searcheddate" type="text">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.form-group -->
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-block btn-primary">Search</button>
                                        </div>
                                    </div>


                                    <div class="col-sm-2">
                                        <input type="submit" value="Export to Excel" name="Submit" class="btn btn-warning btn-block " />
                                    </div>


                                }


                            </div>



                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="box box-info">
                            <div class="box-header with-border bginfo">
                                <h3 class="box-title titlnew">Consignment Report</h3>
                                <p class="totlpaymt pull-right label label-primary">Total :  @(ViewBag.paidamount ?? 0)</p>
                            </div><!-- /.box-header -->
                            <div class="box-body " style=" overflow: auto;">
                                <table id="example1" class="table table-striped table-bordered table-scroll  tbloverflow">
                                    <thead>
                                        <tr>
                                            <th>Sr.No</th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Consignment_No)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Sender)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.sender_phone)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Destination)
                                            </th>


                                            <th>
                                                @Html.DisplayNameFor(model => model.Actual_Weight)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.volumetric_Weight)
                                            </th>
                                            <th>
                                                Payment Mode
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Paid_Amount)
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int i = 1;
                                            foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>@(i++)</td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Consignment_No)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Sender)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.sender_phone)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Destination)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Actual_Weight)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.volumetric_Weight)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Credit)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Paid_Amount)
                                                    </td>
                                                    @*<td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Receipt_Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Receipt_Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Receipt_Id })
                                        </td>*@

                                                </tr>
                                            }
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="box box-info">
                            <div class="box-header with-border bginfo">
                                <h3 class="box-title titlnew">Expense</h3>
                                <p class="totlpaymt pull-right label label-primary">Total :  @ViewBag.expenseCount</p>
                            </div>
                            <div class="box-body">

                                <table id="example1" class="table table-striped table-bordered table-scroll  tbloverflow">
                                    <thead>
                                        <tr>
                                            <th>
                                                Amount
                                            </th>
                                            <th>
                                                Reason
                                            </th>



                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Expense)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Amount
                                                </td>
                                                <td></td>
                                                <td>
                                                    @item.Rason
                                                </td>







                                            </tr>
                                        }
                                    </tbody>

                                </table>

                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="row">
                 

                    <div class="col-md-6">
                        <div class="box box-info">
                            <div class="box-header with-border bginfo">
                                <h3 class="box-title titlnew">Payment</h3>
                                <p class="totlpaymt pull-right label label-primary">Total : @ViewBag.PaymentCount </p>
                            </div><!-- /.box-header -->
                            <div class="box-body ">

                                <table id="example1" class="table table-striped table-bordered table-scroll  tbloverflow">
                                    <thead>
                                        <tr>
                                            <th>
                                                Consignment No
                                            </th>
                                            <th>
                                                Amount
                                            </th>
                                            <th>
                                                Description
                                            </th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Payment)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Consignment_No
                                                </td>
                                                <td></td>
                                                <td>
                                                    @item.amount
                                                </td>

                                                <td>
                                                    @item.Description_
                                                </td>

                                            </tr>
                                        }
                                    </tbody>

                                </table>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="box box-info">
                            <div class="box-header with-border bginfo">
                                <h3 class="box-title titlnew">Savings</h3>
                                <p class="totlpaymt pull-right label label-primary">Total : @ViewBag.Savingscount </p>
                            </div>

                            <div class="box-body ">

                                <table id="example1" class="table table-striped table-bordered tbloverflow table-scroll">
                                    <thead>
                                        <tr>
                                            <th>
                                                Saving Amount
                                            </th>
                                            <th>
                                                Reason
                                            </th>



                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Savings)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Saving_amount
                                                </td>
                                                <td></td>
                                                <td>
                                                    @item.Rason
                                                </td>







                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-info">
                            <div class="box-body    ">
                                @*<p>Total Amount </p>  @ViewBag.sum*@

                                <div class="col-md-9">
                                    <table id="formpaytble">
                                        <tbody>
                                            <tr>
                                                <td class=" total-label"> By Cash</td>
                                                <td class="sign">+</td>
                                                <td class=" "> @ViewBag.bycash</td>

                                            </tr>


                                            <tr>
                                                <td class=" total-label"> By Card</td>
                                                <td class="sign">+</td>
                                                <td class=" "> @ViewBag.bycard</td>

                                            </tr>


                                            <tr>
                                                <td class=" total-label"> By Cheque</td>
                                                <td class="sign">+</td>
                                                <td class=" "> @ViewBag.bycheque</td>

                                            </tr>


                                            <tr>
                                                <td class=" total-label"> By Credit</td>
                                                <td class="sign">+</td>
                                                <td class=" "> @ViewBag.bycredit</td>

                                            </tr>

                                            <tr>
                                                <td class=" total-label"> By Other</td>
                                                <td class="sign">+</td>
                                                <td class=" ">  @ViewBag.byother</td>

                                            </tr>
                                            <tr>
                                                <td class=" total-label">Payment</td>
                                                <td class="sign">+</td>
                                                <td class="">  @ViewBag.PaymentCount</td>
                                            </tr>
                                            <tr>
                                                <td class=" total-label titlnew">Expense</td>
                                                <td class="sign">-</td>
                                                <td class="titlnew"> @ViewBag.expenseCount</td>
                                            </tr>

                                            <tr>
                                                <td class=" total-label titlnewgreen">Total</td>
                                                <td class="sign"></td>
                                                <td class="titlnewgreen ">   @ViewBag.sum</td>

                                            </tr>

                                        </tbody>
                                    </table>


                                </div>

                                @*<div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-body text-left">
                        <p>Total Amount:   @ViewBag.sum</p>
                        <p>By Cash:   @ViewBag.bycash</p>
                        <p>By Card:   @ViewBag.bycard</p>
                        <p>By Cheque:   @ViewBag.bycheque</p>
                        <p>By Credit:   @ViewBag.bycredit</p>
                        <p>By Other:   @ViewBag.byother</p>
                    </div>
                </div>
            </div>
        </div>*@
                                @*<div class="col-md-2">
            <p> Credit Amount: @ViewBag.openingbal</p>
        </div>*@

                                <!-- /input-group -->

                                <div class="col-sm-3 " style="float: right" ;>
                                    <div class="input-group">
                                        <div class="input-group-btn">
                                            <button type="button" class="btn btn-default total-label">Credit Amount</button>
                                        </div>
                                        <!-- /btn-group -->
                                        <input type="text" class="form-control" value="@ViewBag.openingcreditamount">
                                    </div>
                                </div>
                                <!-- /input-group -->
                            </div>
                        </div>
                    </div>

                   
                </div>

            </div>
        </div>
    </section>

</div>

<script>
    //Date picker
    $('#datepicker').datepicker({
        autoclose: true,
        format: 'dd-mm-yyyy'
    })

