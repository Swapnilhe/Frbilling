
@{
    ViewBag.Title = "AdminChangePass";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-info">
                <div class="box-header with-border invoice-intro-block">
                    <h4>
                        Change Password
                    </h4>
                </div>

                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">


                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                        <div class="form-group control-label col-md-2">
                                            <label>Current Password</label>
                                        </div>
                                        <div class="col-md-3 ">
                                            <input type="text" name="currentpass" class="form-control">

                                        </div>


                                        <div class="form-group control-label col-md-2">
                                            <label>New Password</label>
                                        </div>
                                        <div class="col-md-3 ">
                                            <input type="text" name="newpass" class="form-control">

                                        </div>

                                        <div class="form-group control-label col-md-2">
                                            <label>Enter Token</label>
                                        </div>
                                        <div class="col-md-3 ">
                                            <input type="text" name="Token" class="form-control">

                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Create" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (ViewBag.sendmail != null)
{
    <script>
        alert('@ViewBag.sendmail');
    </script>
}