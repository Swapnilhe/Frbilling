@model DtDc_Billing.CustomModel.AddAssignModuletoUser

@{
  ViewBag.Title = "AssignModuleToUser";
  Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />

<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>


<section class="content">
  <div class="row">
    <div class="col-sm-12">
      <div class="box box-info">
        <div class="box-header with-border invoice-intro-block">
            <h4>
                Assign Module To User


            </h4>
        </div>

        <div class="form-horizontal">
          <div class="box-body">
            <div class="row">
              <div class="col-md-12">


                @using (Html.BeginForm("AssignModuleToUser", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                  @Html.AntiForgeryToken()

                  <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                      @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                      <div class="col-md-10">
                        @Html.DropDownList("UserName", "-Please select-")
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                      </div>
                    </div>

                     <div class="form-group">
                      @Html.LabelFor(model => model.UserType, htmlAttributes: new { @class = "control-label col-md-2" })
                      <div class="col-md-10">
                        @Html.DropDownList("UserType", "-Please select-")
                        @Html.ValidationMessageFor(model => model.UserType, "", new { @class = "text-danger" })
                      </div>
                    </div>

                    <div class="form-group">
                      @Html.LabelFor(model => model.PfCode, htmlAttributes: new { @class = "control-label col-md-2" })
                      <div class="col-md-10">
                        @Html.TextBox("PfCode", null, new { @class = "form-control", @placeholder = "PFCode" })
                        @Html.ValidationMessageFor(model => model.PfCode, "", new { @class = "text-danger" })
                      </div>
                    </div>

                    @*<div class="form-group">
                      <label class="col-sm-2 control-label">Date</label>
                      <div class="col-md-10">
                        @Html.EditorFor(model => model.RaiseIssue_datetime, new { htmlAttributes = new { @class = "form-control"} })
                        @Html.ValidationMessageFor(model => model.RaiseIssue_datetime, "", new { @class = "text-danger" })
                      </div>
                    </div>*@

                   

                      <br />
                      <br />

                      <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                          <input type="submit" value="Assign" class="btn btn-primary" />
                        </div>
                      </div>
                    </div>
                }


              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<script>

