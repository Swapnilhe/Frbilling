<script>

    $(document).ready(function () {
        $('#ModuleCash').show();
        $('#ModuleBilling').show();



    });

    $(document).ready(function () {
        $('#Usertype').on('change', (function () {

            var optionSelected = $('#Usertype').val();

            if (optionSelected == "CashCounter") {
                $('#ModuleCash').show();
                $('#ModuleBilling').hide();
            }

            else if (optionSelected == "Billing") {
                $('#ModuleCash').hide();
                $('#ModuleBilling').show();
            }
            else if (optionSelected == "CashCounter", "Billing") {
                $('#ModuleBilling').show();
                $('#ModuleCash').show();

            }
            else if (optionSelected == "Billing", "CashCounter") {
                $('#ModuleBilling').show();
                $('#ModuleCash').show();

            }
            else if (optionSelected == null) {
                $('#ModuleBilling').hide();
                $('#ModuleCash').hide();

            }
            else {
                $('#ModuleBilling').hide();
                $('#ModuleCash').hide();
            }


        }));
    });

</script>