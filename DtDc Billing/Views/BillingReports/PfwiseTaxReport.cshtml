@model IEnumerable<DtDc_Billing.Models.InvoiceAndCompany>

@{
    ViewBag.Title = "TaxReport";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>

<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h4>Mfcode Wise Tax Report</h4>
                </div>

                <div class="form-horizontal">
                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">


                                    @using (Html.BeginForm())
                                    {

                                        
                                            <div class="col-md-2">
                                                <div class="pf-code">
                                                    @Html.DropDownList("PfCode", "-ALL MF-")
                                                </div>
                                            </div>
                                       
                                       
                                        if (ViewBag.fromdate != null)
                                        {
                                            <div class="col-md-3">
                                                <input name="Fromdatetime" class="form-control" id="datepicker" value="@ViewBag.fromdate" placeholder="From Date" type="text">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-3">
                                                <input name="Fromdatetime" class="form-control" id="datepicker" placeholder="From Date" type="text">
                                            </div>
                                        }

                                        if (ViewBag.todate != null)
                                        {
                                            <div class="col-md-3">
                                                <input style="margin-right:50px" value="@ViewBag.todate" name="ToDatetime" class="form-control" placeholder="To Date" id="datepicker1" type="text">
                                            </div>
                                        }

                                        else
                                        {
                                            <div class="col-md-3">
                                                <input style="margin-right:50px" name="ToDatetime" class="form-control" placeholder="To Date" id="datepicker1" type="text">
                                            </div>
                                        }


                                        <div class="col-md-1">
                                            <input type="submit" class="btn btn-primary  sbmt" name="Show" value="Show" />
                                        </div>

                                        <div class="col-md-3">
                                            <input type="submit" value="Export to Excel" name="Submit" class="btn btn-success pull-right" />
                                            <input type="submit" value="Tally excel" name="Tallyexcel" class="btn btn-warning pull-right" />
                                        </div>

                                    }



                                </div>
                            </div>
                        </div>

                        <table id="table_display_block" class="table table-striped table-bordered table-responsive height-450">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.invoiceno)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.invoicedate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.periodfrom)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.periodto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.total)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.fullsurchargetax)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.fullsurchargetaxtotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Royalty_charges)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Docket_charges)
                                </th>
                                <th>
                                    Subtotal
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CgstPer)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CgstAmt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SgstPer)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SgstAmt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IgstPer)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IgstAmt)
                                </th>
                                <th> GST Total </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.netamount)
                                </th>


                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer_Id)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.invoiceno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tempInvoicedate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tempdatefrom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TempdateTo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.total)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fullsurchargetax)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fullsurchargetaxtotal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Royalty_charges)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Docket_charges)
                                    </td>
                                    <td>
                                        @(item.total + item.fullsurchargetaxtotal + item.Royalty_charges + item.Docket_charges)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CgstPer)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CgstAmt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SgstPer)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SgstAmt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IgstPer)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IgstAmt)
                                    </td>
                                    <td>
                                      @(item.SgstAmt + item.CgstAmt + item.IgstAmt)
                                    </td>
                                        <td>
                                        @Html.DisplayFor(modelItem => item.netamount)
                                    </td>

                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .pf-code select {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
        -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
        -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    }
</style>
<script>

    $('#datepicker').datepicker({
        autoclose: true,
        format: 'dd-mm-yyyy'
    })

    $('#datepicker1').datepicker({
        autoclose: true,
        format: 'dd-mm-yyyy'
    })

</script>