@model DtDc_Billing.CustomModel.dashboardDataModel

@if (ViewBag.DestinationCount > 0)
{
    <div class="col-md-6"  >
        <div class="box box-info collapsed-box" style=" width: 97%; " >
            <div class="box-header with-border">
                <h3 class="box-title">Favorable Destinations</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-plus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="table-responsive">
                    <table id="table_display_block" class="table no-margin tblProducts height-450">
                        <thead>
                            <tr>
                                <th style="text-align:center" >City</th>

                                <th style="text-align:center">Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DestinationList)
                            {
                            <tr>
                                <td> @item.City </td>
                                <td>@item.Count</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>

        </div>
    </div>

}

@if (ViewBag.Consignmentcount > 0)
{
    <div class="col-md-6" style="padding-left:0">
        <div class="box box-info collapsed-box" style=" width: 97%; ">
            <div class="box-header with-border">
                <h3 class="box-title">Product Wise Report</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-plus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body">

                <div class="table-responsive">


                    <!-- /.box-header -->
                    <table id="" class="tblCons table no-margin table no-margin tblProducts height-450">
                        <thead>
                            <tr>
                                <th style="text-align:center">Category</th>
                                <th style="text-align:center">Count</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Consignmentcount)
                            {
                                <tr>
                                    <td>@item.Destination </td>
                                    <td>@item.Count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>


        </div>
    </div>
}
    <!-- /.box -->


